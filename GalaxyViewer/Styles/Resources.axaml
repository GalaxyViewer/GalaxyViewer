<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:drawing="clr-namespace:System.Drawing;assembly=System.Drawing.Primitives">

    <!-- Define Colors -->
    <Color x:Key="LightTextColor">#000000</Color>
    <Color x:Key="DarkTextColor">#FFFFFF</Color>
    <Color x:Key="LightMediumTextColor">#666666</Color>
    <Color x:Key="DarkMediumTextColor">#CCCCCC</Color>

    <!-- Define Brushes -->
    <SolidColorBrush x:Key="LightTextBrush" Color="{DynamicResource LightTextColor}"/>
    <SolidColorBrush x:Key="DarkTextBrush" Color="{DynamicResource DarkTextColor}"/>

    <SolidColorBrush x:Key="LightMediumTextBrush" Color="{DynamicResource LightMediumTextColor}"/>
    <SolidColorBrush x:Key="DarkMediumTextBrush" Color="{DynamicResource DarkMediumTextColor}"/>

    <!-- AddressBar specific brushes -->
    <SolidColorBrush x:Key="AddressBarTextBrush" Color="{DynamicResource LightTextColor}"/>
    <SolidColorBrush x:Key="AddressBarWatermarkBrush" Color="{DynamicResource LightMediumTextColor}"/>

    <!-- Define Fonts -->
    <FontFamily x:Key="DefaultFontFamily">avares://GalaxyViewer/Assets/Fonts/#Atkinson Hyperlegible</FontFamily>
    <FontFamily x:Key="EmojiFontFamily">avares://GalaxyViewer/Assets/Fonts/#Noto Color Emoji</FontFamily>
</ResourceDictionary>
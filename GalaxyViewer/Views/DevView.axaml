<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:vm="clr-namespace:GalaxyViewer.ViewModels"
             x:Class="GalaxyViewer.Views.DevView"
             x:DataType="vm:DevViewModel">
    <StackPanel Margin="20">
        <TextBlock Text="Debugging View" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

        <!-- Radio Buttons -->
        <TextBlock Text="Radio Buttons:" FontWeight="Bold" Margin="0,0,0,10" />
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <RadioButton Content="Option 1" GroupName="Options" Margin="0,0,10,0" />
            <RadioButton Content="Option 2" GroupName="Options" Margin="0,0,10,0" />
            <RadioButton Content="Option 3" GroupName="Options" />
        </StackPanel>

        <!-- Check Boxes -->
        <TextBlock Text="Check Boxes:" FontWeight="Bold" Margin="0,0,0,10" />
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <CheckBox Content="Check 1" Margin="0,0,10,0" />
            <CheckBox Content="Check 2" Margin="0,0,10,0" />
            <CheckBox Content="Check 3" />
        </StackPanel>

        <!-- ComboBox -->
        <TextBlock Text="ComboBox:" FontWeight="Bold" Margin="0,0,0,10" />
        <ComboBox Margin="0,0,0,20">
            <ComboBoxItem Content="Item 1" />
            <ComboBoxItem Content="Item 2" />
            <ComboBoxItem Content="Item 3" />
        </ComboBox>

        <!-- TextBox -->
        <TextBlock Text="TextBox:" FontWeight="Bold" Margin="0,0,0,10" />
        <TextBox Watermark="Enter text here..." Margin="0,0,0,20" />

        <!-- Button -->
        <TextBlock Text="Button:" FontWeight="Bold" Margin="0,0,0,10" />
        <Button Content="Click Me" Margin="0,0,0,20" />

        <!-- ListBox -->
        <TextBlock Text="ListBox:" FontWeight="Bold" Margin="0,0,0,10" />
        <ListBox Margin="0,0,0,20">
            <ListBoxItem Content="List Item 1" />
            <ListBoxItem Content="List Item 2" />
            <ListBoxItem Content="List Item 3" />
        </ListBox>

        <!-- Ursa Tests -->
        <TextBlock Text="Ursa Tests:" FontWeight="Bold" Margin="0,0,0,10" />
        <u:ButtonGroup>
            <Button Content="Button 1" />
        </u:ButtonGroup>
        <u:Avatar>
            <Image Source="avares://GalaxyViewer/Assets/Images/Logo.png" Width="100" Height="100" />
        </u:Avatar>
    </StackPanel>
</UserControl>